            <label><input type="radio" name="privacy_agree" value="yes"> 동의합니다</label>
            <label><input type="radio" name="privacy_agree" value="no"> 동의하지 않습니다</label>
        </div>

        <div class="agree-group">
            <label><input type="checkbox" id="agree_all"> 전체 동의합니다</label>
        </div>

        <button type="submit">다음화면</button>
    </form>

    <script>
        const agreeAll = document.getElementById('agree_all');
        const termsRadios = document.getElementsByName('terms_agree');
        const privacyRadios = document.getElementsByName('privacy_agree');

        // 전체 동의 체크 → 두 항목 모두 자동 선택
        agreeAll.addEventListener('change', function () {
            const checked = this.checked;
            termsRadios.forEach(r => r.checked = (r.value === 'yes' && checked));
            privacyRadios.forEach(r => r.checked = (r.value === 'yes' && checked));
        });

        // 개별 동의 상태에 따라 전체 동의 자동 체크
        function updateAgreeAll() {
            const termsYes = Array.from(termsRadios).some(r => r.checked && r.value === 'yes');
            const privacyYes = Array.from(privacyRadios).some(r => r.checked && r.value === 'yes');
            agreeAll.checked = termsYes && privacyYes;
        }

        termsRadios.forEach(r => r.addEventListener('change', updateAgreeAll));
        privacyRadios.forEach(r => r.addEventListener('change', updateAgreeAll));

        // 제출 시 검증
        function validateForm() {
            const termsYes = Array.from(termsRadios).some(r => r.checked && r.value === 'yes');
            const privacyYes = Array.from(privacyRadios).some(r => r.checked && r.value === 'yes');

            if (!termsYes || !privacyYes) {
                alert('이용약관 및 개인정보 수집·이용에 모두 동의해야 합니다.');
                return false;
            }
            return true;
        }
    </script>
